{
  "name": "ROS 2 Development Container",
  "privileged": true,
  "remoteUser": "christian-nils",
  "build": {
    "dockerfile": "./Dockerfile",
    "args": {
      "USERNAME": "christian-nils"
    }
  },
  "workspaceFolder": "/home/ws",
  "workspaceMount": "source=${localWorkspaceFolder},target=/home/ws,type=bind",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.cpptools",
        "ms-vscode.cpptools-themes",
        "twxs.cmake",
        "donjayamanne.python-extension-pack",
        "eamodio.gitlens",
        "ms-iot.vscode-ros",
        "althack.ament-task-provider"
      ]
    }
  },
  "containerEnv": {
    "DISPLAY": "unix:0",
    "ROS_LOCALHOST_ONLY": "1",
    "ROS_DOMAIN_ID": "0"
  },
  "runArgs": [
    "--net=host",
    "-e",
    "DISPLAY=${env:DISPLAY}"
  ],
  "mounts": [
    "source=/tmp/.X11-unix,target=/tmp/.X11-unix,type=bind,consistency=cached",
    "source=/dev/dri,target=/dev/dri,type=bind,consistency=cached",
    "source=${localWorkspaceFolder}/.devcontainer/cache/humble/build,target=/home/ws/build,type=bind",
    "source=${localWorkspaceFolder}/.devcontainer/cache/humble/install,target=/home/ws/install,type=bind",
    "source=${localWorkspaceFolder}/.devcontainer/cache/humble/log,target=/home/ws/log,type=bind",
    "source=/var/run/dbus,target=/var/run/dbus,type=bind"
  ],
  "postCreateCommand": "sudo apt update && sudo rosdep update && sudo rosdep install --from-paths src --ignore-src -y && sudo chown -R christian-nils /home/ws/"
}